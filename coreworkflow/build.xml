<?xml version="1.0" encoding="UTF-8" ?>
<project name="gcsworkflow" default="deploy">
	<property file="build.properties" />
	<path id="libpath">
		<fileset dir="E:/workspace/workspace/coreworkflow/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	<target name="init">
		<mkdir dir="build/classes" />
		<mkdir dir="build/docs"/>
		<mkdir dir="dist" />
	</target>
	<target name="compile" depends="init">
		<javac srcdir="src" destdir="build/classes" includeantruntime="on" encoding="UTF-8">
			<classpath refid="libpath" />
		</javac>
	</target>
	<target name="docs" depends="init">
		<javadoc destdir="build/docs" sourcepath="src" packagenames="com.*" />
	</target>
	<target name="deploy" depends="compile,docs">
		<jar destfile="dist/coreworkflow-${version}.jar" basedir="build/classes" />
	</target>

	<target name="clean" depends="init">
		<delete dir="build"/>
		<delete dir="dist"/>
	</target>
</project>